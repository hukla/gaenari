	<select id="selectPtBrdReqByUserno" parameterType="int" resultType="BrdReqDTO">
		SELECT userno FROM ptreq WHERE userno = #{int}
	</select>
	
	-->
	
	<insert id="insertAbrdReq" parameterType="BrdReqDTO">
		INSERT INTO adpreq VALUES (null, #{abrdno}, #{userno}, 'p')
	</insert>
	
	<insert id="insertVbrdReq" parameterType="BrdReqDTO">
		INSERT INTO volureq VALUES (null, #{vbrdno}, #{userno}, 'p')
	</insert>
	
	<insert id="insertPtbrdReq" parameterType="BrdReqDTO">
		INSERT INTO ptreq VALUES (null, #{ptbrdno}, #{userno}, 'p')
	</insert>
	
