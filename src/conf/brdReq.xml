<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="brdreq">

	<select id="selectABrdReqByAbrdno" parameterType="int" resultType="BrdReqDTO">
		SELECT * FROM adpreq WHERE abrdno = #{int}
	</select>
	
	<select id="selectVBrdReqByVbrdno" parameterType="int" resultType="BrdReqDTO">
		SELECT * FROM volureq WHERE vbrdno = #{int}
	</select>
	
	<select id="selectPtBrdReqByPtbrdno" parameterType="int" resultType="BrdReqDTO">
		SELECT * FROM ptreq WHERE ptbrdno = #{int}
	</select>
	
